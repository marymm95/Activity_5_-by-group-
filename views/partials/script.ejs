            confirmButtonText: 'Yes, ship it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the form if confirmed
                document.getElementById(`ship-form-${orderId}`).submit();
            } else {
                // Optional: Show a toast or notification if they cancel
                toastr.info('Order shipping cancelled');
            }
        });
    }

